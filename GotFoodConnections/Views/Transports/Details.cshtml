                </dt>

                <dd id="provAns">
                    @Html.DisplayFor(model => model.GeneralAvailability)
                </dd>

                <dt id="provType">
                    @Html.DisplayNameFor(model => model.Website)
                </dt>

                <dd id="provAns">

                    <a href="http://@Model.Website" target="_blank">@Model.Website</a>
                </dd>

            </dl>
        </div>
        <p>
            <div id="backBtnAgain">
