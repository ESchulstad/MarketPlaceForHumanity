        <div>

            <hr />
            @*<img src="~/Images/bus-1448914.jpg" id="transport" />*@
            <dl class="dl-horizontal">
                <dt id="provType">
                    @Html.DisplayNameFor(model => model.ContactName)
                </dt>

                <dd id="provAns">
                    @Html.DisplayFor(model => model.ContactName)
                </dd>
                
                <dt id="provType">
                    @Html.DisplayNameFor(model => model.ContactPosition)
                </dt>

                <dd id="provAns">
                    @Html.DisplayFor(model => model.ContactPosition)
                </dd>

                <dt id="provType">
                    @Html.DisplayNameFor(model => model.ContactPhone)
                </dt>

                <dd id="provAns">
                    @Html.DisplayFor(model => model.ContactPhone)
                </dd>

                <dt id="provType">
                    @Html.DisplayNameFor(model => model.ContactEmail)
                </dt>

                <dd id="provAns">
                    @Html.DisplayFor(model => model.ContactEmail)
                </dd>

                <dt id="provType">
                    @Html.DisplayNameFor(model => model.AdditionalContactInfo)
                </dt>

                <dd id="provAns">
                    @Html.DisplayFor(model => model.AdditionalContactInfo)
                </dd>
                <dt id="provType">
                    Address
                </dt>


                <dd id="provAns">
                    @Html.DisplayFor(model => model.StreetNumber) @Html.DisplayFor(model => model.StreetName) <br />
