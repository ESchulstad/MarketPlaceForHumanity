@using Microsoft.AspNet.Identity
@model GotFoodConnections.Models.CharityProfile

@{
    ViewBag.Title = "Details";
}

<div id="CharityImage">
    <img src="~/Images/Charity-Food-Image.jpg" />
</div>
<div id="PostHeader">
</div>
<div id="CharityOverlay">
</div>

<div class="row profilePage">
    <div class="col-xs-12 col-md-6 col-md-offset-5 profileInfo">


        <h2 id="provName">@Html.DisplayFor(model => model.CharityName)</h2>

        @*<img src="~/Images/help-1300942_960_720.png" id="charity" />*@

        <div>
           
            <hr />
            <dl class="dl-horizontal">
                <dt id="provType">
                   @Html.DisplayNameFor(model => model.ContactName)
                </dt>

                <dd id="provAns">
                    @Html.DisplayFor(model => model.ContactName)
                </dd>
              
                <dt id="provType">
                    @Html.DisplayNameFor(model => model.ContactPosition)
                </dt>

                <dd id="provAns">
                    @Html.DisplayFor(model => model.ContactPosition)
                </dd>

                <dt id="provType">
                    @Html.DisplayNameFor(model => model.ContactPhone)
                </dt>

                <dd id="provAns">
                    @Html.DisplayFor(model => model.ContactPhone)
                </dd>

                <dt id="provType">
                    @Html.DisplayNameFor(model => model.ContactEmail)
                </dt>

                <dd id="provAns">
                    <a href="http://@Model.ContactEmail" target="_blank">@Model.ContactEmail</a>

                    @*@Html.DisplayFor(model => model.ContactEmail)*@
                </dd>

                <dt id="provType">
                    @Html.DisplayNameFor(model => model.AdditionalContactInfo)
                </dt>

                <dd id="provAns">
                    @Html.DisplayFor(model => model.AdditionalContactInfo)
                </dd>

                <dt id="provType">
                    Address 
                </dt>

                
                <dd id="provAns">
                    @Html.DisplayFor(model => model.StreetNumber) @Html.DisplayFor(model => model.StreetName) <br />
                    @Html.DisplayFor(model => model.City), @Html.DisplayFor(model => model.State) <br />
                    @Html.DisplayFor(model => model.Zip)
                </dd>
                
                <dt id="provType">
                    @Html.DisplayNameFor(model => model.MissionStatement)
                </dt>

                <dd id="provAns">
                    @Html.DisplayFor(model => model.MissionStatement)
                </dd>

                

                <dt id="provType">
                    @Html.DisplayNameFor(model => model.GenFoodRequest)
                </dt>

                <dd id="provAns">
                    @Html.DisplayFor(model => model.GenFoodRequest)
                </dd>

                <dt id="provType">
                    @Html.DisplayNameFor(model => model.ProvideTransport)
                </dt>

                <dd id="provAns">
                    @Html.DisplayFor(model => model.ProvideTransport)
                </dd>

              
                <dt id="provType">
                    @Html.DisplayNameFor(model => model.Website)
                </dt>

                <dd id="provAns">
                    <a href="http://@Model.Website" target="_blank">@Model.Website</a>
                    @*@Html.DisplayFor(model => model.Website)*@
                </dd>
              
                <dd id="provAns">
                    @*@Html.DisplayFor(model => model.CharityNum)*@
                    <div class="container">
                        <h2>Charity EIN Number</h2>
                        <!-- Trigger the modal with a button -->
                        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Charity Lookup</button>
                        <!-- Modal -->
                        <div class="modal fade" id="myModal" role="dialog">
                            <div class="modal-dialog">

                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h4 class="modal-title">XYZ Charity</h4>
                                    </div>
                                    <div class="modal-body">
                                        <p>Select, right click and copy this: @Model.CharityNum</p>
                                        <p><a href="https://goo.gl/mpvdnj" target="_blank">IRS Charity Lookup</a></p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </dd>

                
            </dl>
        </div>
        <p>
            <div id="backBtnAgain">
                @Html.ActionLink("Back to List of Charities", "CharityList")
             </div>
        </p>
        </div>

</div> 