@model GotFoodConnections.Models.CharityPost

@{
    ViewBag.Title = "Create";
}

@*<h2>Create</h2>*@


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div id="CharityImage">
        <img src="~/Images/Charity-Food-Image.jpg" />
    </div>
    <div id="CharityHeader">
    </div>
    <div id="CharityOverlay">
    </div>

    <div class="row">
        <div class="col-xs-12 col-md-8 col-md-offset-2 chat" id="CharPost">
            <div class="container" id="post">
                <div class="col-md-10">
                    @Html.DropDownList("CharityID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CharityID, "", new { @class = "text-danger" })
                </div>
            </div>
            <div id="CharityPost">
                <div id="FoodRequested">
                    <h4 id="FoodRequestedLabel">@Html.DisplayNameFor(model => model.FoodRequested)</h4>
                    <div id="FoodRequestedCreate">
                        @Html.TextAreaFor(model => model.FoodRequested, 2, 25, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FoodRequested, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div id="row2">
                    <div id="PeopleToFeedCreate">
                        <h5 id="PeopleToFeedLabel">@Html.DisplayNameFor(model => model.PeopleToFeed)</h5>
                        <div id="PeopleToFeedText">
                            @Html.EditorFor(model => model.PeopleToFeed, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PeopleToFeed, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div id="DateRequestedCreate">
                        <h5 id="DateRequestedLabel">@Html.DisplayNameFor(model => model.DateRequested)</h5>
                        <div id="DateRequestedText">
                            <input type="datetime-local" name="DateRequested" id="timeSelector"/>
                            @Html.ValidationMessageFor(model => model.DateRequested, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div id="row2">
                    <div id="CommentsCreate">
                        <h5 id="CommentsLabel">@Html.DisplayNameFor(model => model.Comments)</h5>
                        <div id="CommentsText">
                            @Html.TextAreaFor(model => model.Comments, 4, 100, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div id="WeightRequestedCreate">
                        <h5 id="WeightRequestedLabel">@Html.DisplayNameFor(model => model.WeightRequested)</h5>
                        <div id="WeightRequestedText">
                            @Html.EditorFor(model => model.FoodRequested, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FoodRequested, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div id="CreateCharityTimestamp">
                    @Html.LabelFor(model => model.TimeStamp, htmlAttributes: new {  @id = "CreateTimestampLabel" })
                    <div id="CharityTimestampCreate">
                        @Html.EditorFor(model => model.TimeStamp, new { htmlAttributes = new { @Value = DateTime.Now, @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.TimeStamp, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="form-group" id="CreateSubmit">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" id="CreatePost"/>
        </div>
    </div>

}

<div id="backToIndex">
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
